<h3 id="title">
    <i class="fa fa-arrow-right"></i> Khuyến mãi</h3>
<div id="myCarousel" class="carousel slide" data-ride="carousel">

    <!-- Wrapper for slides -->
    <div class="carousel-inner center-block">
        <div class="item active">
            <img src="img/promotion/promotion0.jpg" alt="Promotion">
        </div>

        <div class="item">
            <img src="img/promotion/promotion1.jpg" alt="Promotion">
        </div>

        <div class="item">
            <img src="img/promotion/promotion2.jpg" alt="Promotion">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<h3 id="title">
    <i class="fa fa-arrow-right"></i> Các mẫu bán chạy</h3>
<ul id="gallery">
    {{#each data}}
    <li>
        <a href="detail.html?id={{id}}" data-desc={{info}}>
            <img src={{link}}>
        </a>
    </li>
    {{/each}}
</ul>

<link rel="stylesheet" href="css/index.css">
<script src="js/index.js"></script>