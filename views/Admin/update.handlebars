<div class="container">
    <h3 id="title">Cập nhật danh sách</h3>
    <button class="btn btn-primary" id="openAdd">Thêm</button>
    <table>
        <tr id="name">
            <th>Tên hàng</th>
            <th>Mô tả</th>
            <th>Số lượng</th>
            <th>Giá bán</th>
        </tr>
    </table>

    {{!--
    <button class="btn btn-primary" id="openAdd">Thêm</button> --}}

    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Thêm</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="usr">Tên áo:</label>
                        <input type="text" class="form-control" id="title2">
                    </div>
                    <div class="form-group">
                        <label for="usr">Địa chỉ:</label>
                        <input type="text" class="form-control" id="address">
                    </div>
                    <div class="form-group">
                        <label for="usr">Mô tả:</label>
                        <input type="text" class="form-control" id="desc">
                    </div>
                    <div class="form-group">
                        <label for="usr">Số lượng:</label>
                        <input type="text" class="form-control" id="amount">
                    </div>
                    <div class="form-group">
                        <label for="usr">Giá bán:</label>
                        <input type="text" class="form-control" id="price">
                    </div>
                    <div class="form-group">
                        <label for="usr">Link ảnh:</label>
                        <input type="text" class="form-control" id="image">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" id="add">Thêm</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>

    <link rel="stylesheet" href="css/update.css">
    <script src="js/update.js"></script>